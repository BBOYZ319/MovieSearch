<!-- views/movies.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Popular Movies</title>
</head>
<body>
    <h1>Popular Movies</h1>
    <ul>
        <% movies.forEach(movie => { %>
            <li>
                <h2><%= movie.title %></h2>
                <p>Release Date: <%= movie.release_date %></p>
                <p>Overview: <%= movie.overview %></p>
            </li>
        <% }) %>
    </ul>
</body>
</html>